extends navbar

block content 
    div(class='w-screen p-4')
        form(action="" method="post") 
            div(class='text-center')
                input(type="text" name="name" id="name" placeholder="Category Title" value=(category ? category.name: '' ), class="text-2xl w-screen lg:w-2/3 h-10 bg-transparent border-b-2 border-double border-black outline-none font-bold")
            div(class='text-center my-5')
                textarea(name="description", cols="30", rows="10" id="description", class='bg-transparent border-2 border-black w-screen p-2 lg:w-2/3', placeholder='Category Description') #{category?category.description:''} 
            div(class='text-center') 
                input(type="submit", value="Submit", class='bg-blue-600 px-4 py-3 rounded-lg')